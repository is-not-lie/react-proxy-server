doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title #{htmlWebpackPlugin.options.title}
  body 
    #app 

    if (htmlWebpackPlugin.options.injectData)
      each data in htmlWebpackPlugin.options.injectData
        input(type="hidden" value=`${data.value}` id=`${data.key}`)
